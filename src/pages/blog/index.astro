---
import { getCollection } from "astro:content";
const posts = await getCollection("blog");
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <h1>Blog</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/blog/${post.slug}`}>{post.data.title}</a>
          <p>
            {post.data.pubDate
              ? new Date(post.data.pubDate).toLocaleDateString()
              : "Fecha no disponible"}
          </p>{" "}
        </li>
      ))
    }
  </ul>
</Layout>
